# Revolut X API
REVOLUT_X_API_KEY=xxx                        # Clé API 64 chars obtenue sur exchange.revolut.com
REVOLUT_X_PRIVATE_KEY_PATH=./private.pem     # Clé privée Ed25519 pour signer les requêtes

# Telegram
TELEGRAM_BOT_TOKEN=xxx
TELEGRAM_CHAT_ID=xxx

# Trading parameters
RISK_PERCENT=0.05
ENTRY_BUFFER_PERCENT=0.002                   # Buffer d'entrée en % du prix (0.2%)
SL_BUFFER_PERCENT=0.003                      # Buffer SL en % du prix (0.3%)
ZERO_RISK_TRIGGER_PERCENT=0.02
ZERO_RISK_LOCK_PERCENT=0.005
TRAILING_STOP_PERCENT=0.02                     # Distance du trailing stop en % (2%)
SWING_LOOKBACK=3

# Assets (format Revolut X : BASE-QUOTE)
TRADING_PAIRS=BTC-USD,SOL-USD,XRP-USD
TIMEFRAME=H4
POLLING_INTERVAL_SECONDS=30

# ── Binance API ──────────────────────────────────────────────────────────────
BINANCE_API_KEY=xxx
BINANCE_SECRET_KEY=xxx

# ── Binance RANGE Bot ────────────────────────────────────────────────────────
BINANCE_RANGE_ALLOCATED_BALANCE=0             # 0 = 100% du USDC dispo

# ── Binance BREAKOUT Bot ─────────────────────────────────────────────────────
BINANCE_BREAKOUT_ALLOCATED_BALANCE=0
BINANCE_BREAKOUT_RISK_PERCENT=0.02
BINANCE_BREAKOUT_MAX_POSITIONS=3
BINANCE_BREAKOUT_POLLING_SECONDS=30
BINANCE_BREAKOUT_ADAPTIVE_TRAIL=true
BINANCE_BREAKOUT_TRAIL_STEP1_PCT=0.02
BINANCE_BREAKOUT_TRAIL_STEP2_PCT=0.05
BINANCE_BREAKOUT_TRAIL_LOCK1_PCT=0.002
BINANCE_BREAKOUT_TRAIL_LOCK2_PCT=0.02
BINANCE_BREAKOUT_KILL_SWITCH=true
BINANCE_BREAKOUT_KILL_PCT=-0.10

# ── Monitoring & Alertes ─────────────────────────────────────────────────────
BREAKOUT_HEARTBEAT_TELEGRAM_SECONDS=3600      # Heartbeat Telegram toutes les heures
API_SLOW_THRESHOLD_MS=5000                    # Warning si appel API > 5s
DATA_STALE_THRESHOLD_SECONDS=18000            # Warning si data > 5h (H4 + marge)
SLIPPAGE_WARNING_PCT=0.005                    # Warning si slippage > 0.5%
DD_WARNING_PCT=-0.05                          # Warning drawdown à -5% (kill à -10%)

# ── Firebase ─────────────────────────────────────────────────────────────────
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json
FIREBASE_ENABLED=true
